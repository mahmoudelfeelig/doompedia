{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mahmoudelfeelig.github.io/doompedia/shared-spec/pack-manifest.schema.json",
  "title": "Doompedia Pack Manifest",
  "type": "object",
  "required": [
    "packId",
    "language",
    "version",
    "createdAt",
    "recordCount",
    "compression",
    "shards",
    "attribution"
  ],
  "properties": {
    "packId": {
      "type": "string",
      "pattern": "^[a-z]{2,8}-[a-z0-9-]+$"
    },
    "language": {
      "type": "string"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "recordCount": {
      "type": "integer",
      "minimum": 1
    },
    "description": {
      "type": "string"
    },
    "packTags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "compression": {
      "type": "string",
      "enum": ["gzip", "none"]
    },
    "shards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "url", "sha256", "records", "bytes"],
        "properties": {
          "id": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "records": {
            "type": "integer",
            "minimum": 1
          },
          "bytes": {
            "type": "integer",
            "minimum": 1
          }
        },
        "additionalProperties": false
      }
    },
    "delta": {
      "type": "object",
      "required": ["baseVersion", "targetVersion", "url", "sha256", "ops"],
      "properties": {
        "baseVersion": {
          "type": "integer",
          "minimum": 1
        },
        "targetVersion": {
          "type": "integer",
          "minimum": 1
        },
        "url": {
          "type": "string"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "ops": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "topicDistribution": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "entityDistribution": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "sampleKeywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "attribution": {
      "type": "object",
      "required": ["source", "license", "licenseUrl", "requiredNotice"],
      "properties": {
        "source": { "type": "string" },
        "license": { "type": "string" },
        "licenseUrl": { "type": "string" },
        "requiredNotice": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
